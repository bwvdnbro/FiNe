/**
 * @file Configuration.hpp
 *
 * @brief File containing CMake configured configuration flags.
 *
 * Do not edit this file directly! Instead edit Configuration.hpp.in.
 *
 * @author Bert Vandenbroucke (bert.vandenbroucke@gmail.com)
 */
#ifndef CONFIGURATION_HPP
#define CONFIGURATION_HPP

/*! @brief If defined, an MPI installation was found on the system. */
#cmakedefine HAVE_MPI

/*! @brief If defined, the compiler supports OpenMP. */
#cmakedefine HAVE_OPENMP

// CMake defined values. We disable clang-format for these, as it puts spaces
// in between the @'s...
// clang-format off

/*! @brief Maximum number of shared memory threads that can be used on this
 *  system. */
#define MAX_NUM_THREADS @MAX_NUM_THREADS@

/*! @brief Major version number */
#define FINE_VERSION_MAJOR @FINE_VERSION_MAJOR@
/*! @brief Minor version number */
#define FINE_VERSION_MINOR @FINE_VERSION_MINOR@

// clang-format on

#endif // CONFIGURATION_HPP
